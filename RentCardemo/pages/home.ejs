    <script>
        document.addEventListener('DOMContentLoaded', function () {
            new Splide('.splide', {
                type: "loop",
                perPage: 3,
                gap: "2em",
                autoplay: true,
                interval: "3400",
                speed: '400',
                keyboard: "true",
                updateOnMove: "true",
                focus: "center",
                classes: {
                    // Add classes for pagination.
                    pagination: 'splide__pagination your-class-pagination', // container
                    page: 'splide__pagination__page your-class-page', // each button
                },
                breakpoints: {
                    1000: {
                        perPage: 2
                    },
                    800: {
                        perPage: 1
                    },
                }
            }).mount();
        });
    </script>
